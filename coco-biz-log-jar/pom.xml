<!--  </parent>-->
  <properties>
    <java.version>1.8</java.version>
    <maven.javadoc.skip>true</maven.javadoc.skip>
    <maven.test.skip>true</maven.test.skip>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    <spring-cloud.version>Edgware.SR3</spring-cloud.version>
  </properties>

  <repositories>
    <repository>
      <id>Nexus</id>
      <name>Nexus Public Repository</name>
      <url>http://pmp.yst.com.cn:8081/nexus/content/groups/public/</url>
    </repository>
  </repositories>


  <scm>
    <connection>scm:git:git@gitlab.yst.com.cn:ckli01/cos-biz-log.git</connection>
    <developerConnection>scm:git:git@gitlab.yst.com.cn:ckli01/cos-biz-log.git</developerConnection>
    <tag>HEAD</tag>
    <url>git@gitlab.yst.com.cn:ckli01/cos-biz-log.git</url>
  </scm>




</project>